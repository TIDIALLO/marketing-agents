datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// ─── Tenant & Auth ───────────────────────────────────────────

model Tenant {
  id             String   @id @default(cuid())
  name           String?
  plan           String   @default("free")
  logo           String?
  primaryColor   String?  @map("primary_color")
  secondaryColor String?  @map("secondary_color")
  customDomain   String?  @unique @map("custom_domain")
  createdAt      DateTime @default(now()) @map("created_at")
  updatedAt      DateTime @updatedAt @map("updated_at")

  users         PlatformUser[]
  organizations Organization[]
  brands        Brand[]

  @@map("tenants")
}

model PlatformUser {
  id                      String   @id @default(cuid())
  tenantId                String   @map("tenant_id")
  email                   String   @unique
  passwordHash            String   @map("password_hash")
  firstName               String   @map("first_name")
  lastName                String   @map("last_name")
  role                    String   @default("owner")
  refreshToken            String?  @map("refresh_token")
  notificationPreferences Json?    @default("{\"slack\":true,\"email\":true,\"whatsapp\":false}") @map("notification_preferences")
  createdAt               DateTime @default(now()) @map("created_at")
  updatedAt               DateTime @updatedAt @map("updated_at")

  tenant              Tenant               @relation(fields: [tenantId], references: [id])
  passwordResetTokens PasswordResetToken[]
  organizationUsers   OrganizationUser[]

  @@index([tenantId])
  @@map("platform_users")
}

model PasswordResetToken {
  id        String    @id @default(cuid())
  userId    String    @map("user_id")
  tokenHash String    @unique @map("token_hash")
  expiresAt DateTime  @map("expires_at")
  usedAt    DateTime? @map("used_at")
  createdAt DateTime  @default(now()) @map("created_at")

  user PlatformUser @relation(fields: [userId], references: [id])

  @@index([userId])
  @@map("password_reset_tokens")
}

// ─── Organization ────────────────────────────────────────────

model Organization {
  id          String   @id @default(cuid())
  tenantId    String   @map("tenant_id")
  name        String
  description String?
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  tenant      Tenant             @relation(fields: [tenantId], references: [id])
  users       OrganizationUser[]
  invitations UserInvitation[]
  brands      Brand[]

  @@index([tenantId])
  @@map("organizations")
}

model OrganizationUser {
  id             String   @id @default(cuid())
  organizationId String   @map("organization_id")
  userId         String   @map("user_id")
  role           String   @default("editor")
  joinedAt       DateTime @default(now()) @map("joined_at")

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)
  user         PlatformUser @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([organizationId, userId])
  @@index([userId])
  @@map("organization_users")
}

model UserInvitation {
  id             String    @id @default(cuid())
  organizationId String    @map("organization_id")
  email          String
  role           String    @default("editor")
  tokenHash      String    @unique @map("token_hash")
  expiresAt      DateTime  @map("expires_at")
  usedAt         DateTime? @map("used_at")
  createdAt      DateTime  @default(now()) @map("created_at")

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  @@index([organizationId])
  @@index([email])
  @@map("user_invitations")
}

// ─── Brand & Product ─────────────────────────────────────────

model Brand {
  id                String   @id @default(cuid())
  tenantId          String   @map("tenant_id")
  organizationId    String   @map("organization_id")
  name              String
  brandVoice        Json?    @map("brand_voice")
  targetAudience    Json?    @map("target_audience")
  contentGuidelines Json?    @map("content_guidelines")
  visualGuidelines  Json?    @map("visual_guidelines")
  createdAt         DateTime @default(now()) @map("created_at")
  updatedAt         DateTime @updatedAt @map("updated_at")

  tenant         Tenant         @relation(fields: [tenantId], references: [id])
  organization   Organization   @relation(fields: [organizationId], references: [id])
  products       Product[]
  socialAccounts SocialAccount[]
  contentInputs  ContentInput[]
  contentPieces  ContentPiece[]

  @@index([tenantId])
  @@index([organizationId])
  @@map("brands")
}

model Product {
  id          String   @id @default(cuid())
  brandId     String   @map("brand_id")
  name        String
  description String?
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  brand Brand @relation(fields: [brandId], references: [id], onDelete: Cascade)

  @@index([brandId])
  @@map("products")
}

// ─── Social & Ad Accounts ────────────────────────────────────

model SocialAccount {
  id                    String    @id @default(cuid())
  brandId               String    @map("brand_id")
  platform              String
  platformUserId        String?   @map("platform_user_id")
  platformUsername      String?   @map("platform_username")
  accessTokenEncrypted  String    @map("access_token_encrypted")
  refreshTokenEncrypted String?   @map("refresh_token_encrypted")
  tokenExpiresAt        DateTime? @map("token_expires_at")
  status                String    @default("active")
  createdAt             DateTime  @default(now()) @map("created_at")
  updatedAt             DateTime  @updatedAt @map("updated_at")

  brand      Brand              @relation(fields: [brandId], references: [id], onDelete: Cascade)
  adAccounts AdAccount[]
  schedules  ContentSchedule[]

  @@unique([brandId, platform])
  @@index([brandId])
  @@map("social_accounts")
}

model AdAccount {
  id                   String   @id @default(cuid())
  socialAccountId      String   @map("social_account_id")
  platform             String
  platformAccountId    String   @map("platform_account_id")
  name                 String?
  credentialsEncrypted String?  @map("credentials_encrypted")
  status               String   @default("active")
  createdAt            DateTime @default(now()) @map("created_at")
  updatedAt            DateTime @updatedAt @map("updated_at")

  socialAccount SocialAccount @relation(fields: [socialAccountId], references: [id], onDelete: Cascade)

  @@index([socialAccountId])
  @@map("ad_accounts")
}

// ─── Content Pipeline (Agent 1 — Content Flywheel) ───────────

model ContentPillar {
  id          String   @id @default(cuid())
  tenantId    String   @map("tenant_id")
  brandId     String   @map("brand_id")
  name        String
  description String?
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  contentInputs ContentInput[]

  @@index([tenantId])
  @@index([brandId])
  @@map("content_pillars")
}

model ContentInput {
  id                String    @id @default(cuid())
  tenantId          String    @map("tenant_id")
  brandId           String    @map("brand_id")
  pillarId          String?   @map("pillar_id")
  createdById       String    @map("created_by_id")
  inputType         String    @default("text")
  rawContent        String    @map("raw_content")
  sourceUrl         String?   @map("source_url")
  audioFileUrl      String?   @map("audio_file_url")
  transcription     String?
  aiSummary         String?   @map("ai_summary")
  aiSuggestedTopics Json?     @map("ai_suggested_topics")
  aiResearch        Json?     @map("ai_research")
  status            String    @default("pending")
  processedAt       DateTime? @map("processed_at")
  createdAt         DateTime  @default(now()) @map("created_at")
  updatedAt         DateTime  @updatedAt @map("updated_at")

  brand         Brand          @relation(fields: [brandId], references: [id])
  pillar        ContentPillar? @relation(fields: [pillarId], references: [id])
  contentPieces ContentPiece[]

  @@index([tenantId])
  @@index([brandId])
  @@index([status])
  @@map("content_inputs")
}

model ContentPiece {
  id              String    @id @default(cuid())
  tenantId        String    @map("tenant_id")
  brandId         String    @map("brand_id")
  contentInputId  String?   @map("content_input_id")
  parentId        String?   @map("parent_id")
  platform        String
  title           String
  body            String
  hashtags        Json      @default("[]")
  callToAction    String?   @map("call_to_action")
  mediaUrl        String?   @map("media_url")
  mediaPrompt     String?   @map("media_prompt")
  status          String    @default("draft")
  platformPostId  String?   @map("platform_post_id")
  engagementScore Float     @default(0) @map("engagement_score")
  publishedAt     DateTime? @map("published_at")
  createdAt       DateTime  @default(now()) @map("created_at")
  updatedAt       DateTime  @updatedAt @map("updated_at")

  brand        Brand         @relation(fields: [brandId], references: [id])
  contentInput ContentInput? @relation(fields: [contentInputId], references: [id])
  parent       ContentPiece? @relation("ContentPieceVariants", fields: [parentId], references: [id])
  variants     ContentPiece[] @relation("ContentPieceVariants")
  schedules    ContentSchedule[]
  metrics      ContentMetrics[]
  signals      ContentSignal[]

  @@index([tenantId])
  @@index([brandId])
  @@index([contentInputId])
  @@index([status])
  @@map("content_pieces")
}

// ─── Approval & Publishing ───────────────────────────────────

model ApprovalQueue {
  id            String    @id @default(cuid())
  tenantId      String    @map("tenant_id")
  entityType    String    @map("entity_type")
  entityId      String    @map("entity_id")
  assigneeId    String?   @map("assignee_id")
  status        String    @default("pending")
  priority      String    @default("normal")
  actionToken   String?   @unique @map("action_token")
  tokenExpiresAt DateTime? @map("token_expires_at")
  reminderCount Int       @default(0) @map("reminder_count")
  resolvedAt    DateTime? @map("resolved_at")
  resolvedBy    String?   @map("resolved_by")
  resolution    String?
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")

  @@index([tenantId])
  @@index([entityType, entityId])
  @@index([status])
  @@index([assigneeId])
  @@map("approval_queue")
}

model ContentSchedule {
  id              String    @id @default(cuid())
  contentPieceId  String    @map("content_piece_id")
  socialAccountId String    @map("social_account_id")
  scheduledAt     DateTime  @map("scheduled_at")
  publishedAt     DateTime? @map("published_at")
  status          String    @default("scheduled")
  retryCount      Int       @default(0) @map("retry_count")
  lastError       String?   @map("last_error")
  createdAt       DateTime  @default(now()) @map("created_at")
  updatedAt       DateTime  @updatedAt @map("updated_at")

  contentPiece  ContentPiece  @relation(fields: [contentPieceId], references: [id], onDelete: Cascade)
  socialAccount SocialAccount @relation(fields: [socialAccountId], references: [id])

  @@index([status, scheduledAt])
  @@index([contentPieceId])
  @@index([socialAccountId])
  @@map("content_schedules")
}

// ─── Content Performance (Agent 1 — Analytics) ──────────────

model ContentMetrics {
  id              String   @id @default(cuid())
  contentPieceId  String   @map("content_piece_id")
  platform        String
  impressions     Int      @default(0)
  reach           Int      @default(0)
  engagements     Int      @default(0)
  likes           Int      @default(0)
  comments        Int      @default(0)
  shares          Int      @default(0)
  saves           Int      @default(0)
  clicks          Int      @default(0)
  videoViews      Int      @default(0) @map("video_views")
  engagementRate  Float    @default(0) @map("engagement_rate")
  collectedAt     DateTime @default(now()) @map("collected_at")

  contentPiece ContentPiece @relation(fields: [contentPieceId], references: [id], onDelete: Cascade)

  @@index([contentPieceId])
  @@index([collectedAt])
  @@map("content_metrics")
}

model ContentSignal {
  id                String   @id @default(cuid())
  contentPieceId    String   @map("content_piece_id")
  signalType        String   @map("signal_type")
  signalStrength    Float    @map("signal_strength")
  aiRecommendation  String   @map("ai_recommendation")
  createdAt         DateTime @default(now()) @map("created_at")

  contentPiece ContentPiece @relation(fields: [contentPieceId], references: [id], onDelete: Cascade)

  @@index([contentPieceId])
  @@index([signalType])
  @@map("content_signals")
}

// ─── Lead Capture & Qualification (Agent 3 — Opportunity Hunter) ─

model Lead {
  id              String    @id @default(cuid())
  tenantId        String    @map("tenant_id")
  brandId         String    @map("brand_id")
  firstName       String    @map("first_name")
  lastName        String    @map("last_name")
  email           String
  phone           String?
  company         String?
  source          String    @default("form")
  sourceDetail    String?   @map("source_detail")
  utmSource       String?   @map("utm_source")
  utmMedium       String?   @map("utm_medium")
  utmCampaign     String?   @map("utm_campaign")
  score           Int?
  temperature     String?
  status          String    @default("new")
  gdprConsent     Boolean   @default(false) @map("gdpr_consent")
  assignedTo      String?   @map("assigned_to")
  convertedAt     DateTime? @map("converted_at")
  conversionValue Float?    @map("conversion_value")
  createdAt       DateTime  @default(now()) @map("created_at")
  updatedAt       DateTime  @updatedAt @map("updated_at")

  bookings CalendarBooking[]

  @@unique([tenantId, email])
  @@index([tenantId])
  @@index([brandId])
  @@index([temperature])
  @@index([status])
  @@index([phone])
  @@map("leads")
}

model CalendarBooking {
  id             String    @id @default(cuid())
  leadId         String    @map("lead_id")
  userId         String?   @map("user_id")
  scheduledAt    DateTime? @map("scheduled_at")
  status         String    @default("pending")
  aiBriefing     String?   @map("ai_briefing")
  calcomEventId  String?   @map("calcom_event_id")
  proposedSlots  Json?     @map("proposed_slots")
  proposalMessage String?  @map("proposal_message")
  createdAt      DateTime  @default(now()) @map("created_at")
  updatedAt      DateTime  @updatedAt @map("updated_at")

  lead Lead @relation(fields: [leadId], references: [id], onDelete: Cascade)

  @@index([leadId])
  @@index([status])
  @@map("calendar_bookings")
}
