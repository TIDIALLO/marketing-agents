datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

// ─── Auth ───────────────────────────────────────────────────

model PlatformUser {
  id                      String   @id @default(cuid())
  email                   String   @unique
  passwordHash            String   @map("password_hash")
  firstName               String   @map("first_name")
  lastName                String   @map("last_name")
  role                    String   @default("owner")
  refreshToken            String?  @map("refresh_token")
  notificationPreferences Json?    @default("{\"slack\":true,\"email\":true,\"whatsapp\":false}") @map("notification_preferences")
  createdAt               DateTime @default(now()) @map("created_at")
  updatedAt               DateTime @updatedAt @map("updated_at")

  passwordResetTokens PasswordResetToken[]
  brands              Brand[]

  @@map("platform_users")
}

model PasswordResetToken {
  id        String    @id @default(cuid())
  userId    String    @map("user_id")
  tokenHash String    @unique @map("token_hash")
  expiresAt DateTime  @map("expires_at")
  usedAt    DateTime? @map("used_at")
  createdAt DateTime  @default(now()) @map("created_at")

  user PlatformUser @relation(fields: [userId], references: [id])

  @@index([userId])
  @@map("password_reset_tokens")
}

// ─── Brand & Product ─────────────────────────────────────────

model Brand {
  id                String   @id @default(cuid())
  userId            String   @map("user_id")
  name              String
  brandVoice        Json?    @map("brand_voice")
  targetAudience    Json?    @map("target_audience")
  contentGuidelines Json?    @map("content_guidelines")
  visualGuidelines  Json?    @map("visual_guidelines")
  createdAt         DateTime @default(now()) @map("created_at")
  updatedAt         DateTime @updatedAt @map("updated_at")

  user           PlatformUser    @relation(fields: [userId], references: [id])
  products       Product[]
  socialAccounts SocialAccount[]
  contentInputs  ContentInput[]
  contentPieces  ContentPiece[]
  landingPages   LandingPage[]
  emailTemplates EmailTemplate[]
  emailCampaigns EmailCampaign[]

  @@index([userId])
  @@map("brands")
}

model Product {
  id              String   @id @default(cuid())
  brandId         String   @map("brand_id")
  name            String
  slug            String?  @unique
  description     String?
  tagline         String?
  longDescription String?  @map("long_description")
  pricing         Json?
  features        Json?
  testimonials    Json?
  ctaText         String?  @map("cta_text")
  ctaUrl          String?  @map("cta_url")
  isActive        Boolean  @default(true) @map("is_active")
  sortOrder       Int      @default(0) @map("sort_order")
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  brand        Brand         @relation(fields: [brandId], references: [id], onDelete: Cascade)
  landingPages LandingPage[]

  @@index([brandId])
  @@map("products")
}

// ─── Landing Pages ──────────────────────────────────────────

model LandingPage {
  id            String   @id @default(cuid())
  brandId       String   @map("brand_id")
  productId     String?  @map("product_id")
  slug          String   @unique
  title         String
  heroTitle     String?  @map("hero_title")
  heroSubtitle  String?  @map("hero_subtitle")
  heroCtaText   String?  @map("hero_cta_text")
  heroCtaUrl    String?  @map("hero_cta_url")
  sections      Json?
  seoTitle      String?  @map("seo_title")
  seoDescription String? @map("seo_description")
  isPublished   Boolean  @default(false) @map("is_published")
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  brand   Brand    @relation(fields: [brandId], references: [id], onDelete: Cascade)
  product Product? @relation(fields: [productId], references: [id], onDelete: SetNull)

  @@index([brandId])
  @@index([productId])
  @@map("landing_pages")
}

// ─── Email Marketing ────────────────────────────────────────

model EmailTemplate {
  id        String   @id @default(cuid())
  brandId   String   @map("brand_id")
  name      String
  subject   String
  htmlBody  String   @map("html_body")
  textBody  String?  @map("text_body")
  variables Json?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  brand     Brand           @relation(fields: [brandId], references: [id], onDelete: Cascade)
  campaigns EmailCampaign[]

  @@index([brandId])
  @@map("email_templates")
}

model EmailCampaign {
  id              String    @id @default(cuid())
  brandId         String    @map("brand_id")
  templateId      String?   @map("template_id")
  name            String
  subject         String
  status          String    @default("draft")
  scheduledAt     DateTime? @map("scheduled_at")
  sentAt          DateTime? @map("sent_at")
  recipientFilter Json?     @map("recipient_filter")
  recipientCount  Int       @default(0) @map("recipient_count")
  sentCount       Int       @default(0) @map("sent_count")
  openCount       Int       @default(0) @map("open_count")
  clickCount      Int       @default(0) @map("click_count")
  bounceCount     Int       @default(0) @map("bounce_count")
  createdAt       DateTime  @default(now()) @map("created_at")
  updatedAt       DateTime  @updatedAt @map("updated_at")

  brand    Brand          @relation(fields: [brandId], references: [id], onDelete: Cascade)
  template EmailTemplate? @relation(fields: [templateId], references: [id], onDelete: SetNull)

  @@index([brandId])
  @@index([templateId])
  @@index([status])
  @@map("email_campaigns")
}

// ─── Social & Ad Accounts ────────────────────────────────────

model SocialAccount {
  id                    String    @id @default(cuid())
  brandId               String    @map("brand_id")
  platform              String
  platformUserId        String?   @map("platform_user_id")
  platformUsername      String?   @map("platform_username")
  profileType           String?   @map("profile_type")
  accessTokenEncrypted  String    @map("access_token_encrypted")
  refreshTokenEncrypted String?   @map("refresh_token_encrypted")
  tokenExpiresAt        DateTime? @map("token_expires_at")
  status                String    @default("active")
  createdAt             DateTime  @default(now()) @map("created_at")
  updatedAt             DateTime  @updatedAt @map("updated_at")

  brand      Brand              @relation(fields: [brandId], references: [id], onDelete: Cascade)
  adAccounts AdAccount[]
  schedules  ContentSchedule[]

  @@unique([brandId, platform])
  @@index([brandId])
  @@map("social_accounts")
}

model AdAccount {
  id                   String   @id @default(cuid())
  socialAccountId      String   @map("social_account_id")
  platform             String
  platformAccountId    String   @map("platform_account_id")
  name                 String?
  credentialsEncrypted String?  @map("credentials_encrypted")
  status               String   @default("active")
  createdAt            DateTime @default(now()) @map("created_at")
  updatedAt            DateTime @updatedAt @map("updated_at")

  socialAccount SocialAccount @relation(fields: [socialAccountId], references: [id], onDelete: Cascade)

  @@index([socialAccountId])
  @@map("ad_accounts")
}

// ─── Content Pipeline (Agent 1 — Content Flywheel) ───────────

model ContentPillar {
  id          String   @id @default(cuid())
  brandId     String   @map("brand_id")
  name        String
  description String?
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  contentInputs ContentInput[]

  @@index([brandId])
  @@map("content_pillars")
}

model ContentInput {
  id                String    @id @default(cuid())
  brandId           String    @map("brand_id")
  pillarId          String?   @map("pillar_id")
  createdById       String    @map("created_by_id")
  inputType         String    @default("text")
  rawContent        String    @map("raw_content")
  sourceUrl         String?   @map("source_url")
  audioFileUrl      String?   @map("audio_file_url")
  transcription     String?
  aiSummary         String?   @map("ai_summary")
  aiSuggestedTopics Json?     @map("ai_suggested_topics")
  aiResearch        Json?     @map("ai_research")
  status            String    @default("pending")
  processedAt       DateTime? @map("processed_at")
  createdAt         DateTime  @default(now()) @map("created_at")
  updatedAt         DateTime  @updatedAt @map("updated_at")

  brand         Brand          @relation(fields: [brandId], references: [id])
  pillar        ContentPillar? @relation(fields: [pillarId], references: [id])
  contentPieces ContentPiece[]

  @@index([brandId])
  @@index([status])
  @@map("content_inputs")
}

model ContentPiece {
  id              String    @id @default(cuid())
  brandId         String    @map("brand_id")
  contentInputId  String?   @map("content_input_id")
  parentId        String?   @map("parent_id")
  platform        String
  title           String
  body            String
  hashtags        Json      @default("[]")
  callToAction    String?   @map("call_to_action")
  mediaUrl        String?   @map("media_url")
  mediaPrompt     String?   @map("media_prompt")
  framework       String?
  templateId      String?   @map("template_id")
  templateData    Json?     @map("template_data")
  parentPieceId   String?   @map("parent_piece_id")
  repurposeType   String?   @map("repurpose_type")
  status          String    @default("draft")
  platformPostId  String?   @map("platform_post_id")
  engagementScore Float     @default(0) @map("engagement_score")
  publishedAt     DateTime? @map("published_at")
  createdAt       DateTime  @default(now()) @map("created_at")
  updatedAt       DateTime  @updatedAt @map("updated_at")

  brand        Brand         @relation(fields: [brandId], references: [id])
  contentInput ContentInput? @relation(fields: [contentInputId], references: [id])
  parent       ContentPiece? @relation("ContentPieceVariants", fields: [parentId], references: [id])
  variants     ContentPiece[] @relation("ContentPieceVariants")
  parentPiece  ContentPiece?  @relation("ContentPieceRepurpose", fields: [parentPieceId], references: [id])
  repurposed   ContentPiece[] @relation("ContentPieceRepurpose")
  schedules    ContentSchedule[]
  metrics      ContentMetrics[]
  signals      ContentSignal[]

  @@index([brandId])
  @@index([contentInputId])
  @@index([parentPieceId])
  @@index([status])
  @@map("content_pieces")
}

// ─── Approval & Publishing ───────────────────────────────────

model ApprovalQueue {
  id            String    @id @default(cuid())
  entityType    String    @map("entity_type")
  entityId      String    @map("entity_id")
  assigneeId    String?   @map("assignee_id")
  status        String    @default("pending")
  priority      String    @default("normal")
  actionToken   String?   @unique @map("action_token")
  tokenExpiresAt DateTime? @map("token_expires_at")
  reminderCount Int       @default(0) @map("reminder_count")
  resolvedAt    DateTime? @map("resolved_at")
  resolvedBy    String?   @map("resolved_by")
  resolution    String?
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")

  @@index([entityType, entityId])
  @@index([status])
  @@index([assigneeId])
  @@map("approval_queue")
}

model ContentSchedule {
  id              String    @id @default(cuid())
  contentPieceId  String    @map("content_piece_id")
  socialAccountId String    @map("social_account_id")
  scheduledAt     DateTime  @map("scheduled_at")
  publishedAt     DateTime? @map("published_at")
  status          String    @default("scheduled")
  retryCount      Int       @default(0) @map("retry_count")
  lastError       String?   @map("last_error")
  createdAt       DateTime  @default(now()) @map("created_at")
  updatedAt       DateTime  @updatedAt @map("updated_at")

  contentPiece  ContentPiece  @relation(fields: [contentPieceId], references: [id], onDelete: Cascade)
  socialAccount SocialAccount @relation(fields: [socialAccountId], references: [id])

  @@index([status, scheduledAt])
  @@index([contentPieceId])
  @@index([socialAccountId])
  @@map("content_schedules")
}

// ─── Content Performance (Agent 1 — Analytics) ──────────────

model ContentMetrics {
  id              String   @id @default(cuid())
  contentPieceId  String   @map("content_piece_id")
  platform        String
  impressions     Int      @default(0)
  reach           Int      @default(0)
  engagements     Int      @default(0)
  likes           Int      @default(0)
  comments        Int      @default(0)
  shares          Int      @default(0)
  saves           Int      @default(0)
  clicks          Int      @default(0)
  videoViews      Int      @default(0) @map("video_views")
  engagementRate  Float    @default(0) @map("engagement_rate")
  collectionAge   Int?     @map("collection_age")
  collectedAt     DateTime @default(now()) @map("collected_at")

  contentPiece ContentPiece @relation(fields: [contentPieceId], references: [id], onDelete: Cascade)

  @@index([contentPieceId])
  @@index([collectedAt])
  @@map("content_metrics")
}

model ContentSignal {
  id                String       @id @default(cuid())
  contentPieceId    String       @map("content_piece_id")
  signalType        String       @map("signal_type")
  signalStrength    Float        @map("signal_strength")
  aiRecommendation  String       @map("ai_recommendation")
  createdAt         DateTime     @default(now()) @map("created_at")

  contentPiece ContentPiece  @relation(fields: [contentPieceId], references: [id], onDelete: Cascade)
  adCampaigns  AdCampaign[]

  @@unique([contentPieceId, signalType], name: "contentPieceId_signalType")
  @@index([contentPieceId])
  @@index([signalType])
  @@map("content_signals")
}

// ─── Daily Analytics Aggregation ────────────────────────────────

model DailyAnalytics {
  id                String   @id @default(cuid())
  brandId           String   @map("brand_id")
  date              DateTime @db.Date
  contentsPublished Int      @default(0) @map("contents_published")
  impressions       Int      @default(0)
  engagements       Int      @default(0)
  avgEngagementRate Float    @default(0) @map("avg_engagement_rate")
  adSpend           Float    @default(0) @map("ad_spend")
  leadsGenerated    Int      @default(0) @map("leads_generated")
  leadsQualified    Int      @default(0) @map("leads_qualified")
  conversions       Int      @default(0)
  createdAt         DateTime @default(now()) @map("created_at")

  @@unique([brandId, date])
  @@index([date])
  @@map("daily_analytics")
}

// ─── Lead Capture & Qualification (Agent 3 — Opportunity Hunter) ─

model Lead {
  id              String    @id @default(cuid())
  brandId         String    @map("brand_id")
  firstName       String    @map("first_name")
  lastName        String    @map("last_name")
  email           String
  phone           String?
  company         String?
  source          String    @default("form")
  sourceDetail    String?   @map("source_detail")
  utmSource       String?   @map("utm_source")
  utmMedium       String?   @map("utm_medium")
  utmCampaign     String?   @map("utm_campaign")
  score           Int?
  temperature     String?
  status          String    @default("new")
  gdprConsent     Boolean   @default(false) @map("gdpr_consent")
  assignedTo      String?   @map("assigned_to")
  convertedAt     DateTime? @map("converted_at")
  conversionValue Float?    @map("conversion_value")
  createdAt       DateTime  @default(now()) @map("created_at")
  updatedAt       DateTime  @updatedAt @map("updated_at")

  bookings    CalendarBooking[]
  interactions LeadInteraction[]
  enrollments  LeadSequenceEnrollment[]

  @@unique([brandId, email])
  @@index([brandId])
  @@index([temperature])
  @@index([status])
  @@index([phone])
  @@map("leads")
}

model CalendarBooking {
  id              String    @id @default(cuid())
  leadId          String    @map("lead_id")
  userId          String?   @map("user_id")
  scheduledAt     DateTime? @map("scheduled_at")
  status          String    @default("pending")
  aiBriefing      String?   @map("ai_briefing")
  calcomEventId   String?   @map("calcom_event_id")
  proposedSlots   Json?     @map("proposed_slots")
  proposalMessage String?   @map("proposal_message")
  confirmedAt     DateTime? @map("confirmed_at")
  confirmedSlot   Json?     @map("confirmed_slot")
  createdAt       DateTime  @default(now()) @map("created_at")
  updatedAt       DateTime  @updatedAt @map("updated_at")

  lead Lead @relation(fields: [leadId], references: [id], onDelete: Cascade)

  @@index([leadId])
  @@index([status])
  @@map("calendar_bookings")
}

// ─── Lead Nurturing & Conversion (Agent 3 — Sequences) ───────

model LeadSequence {
  id          String   @id @default(cuid())
  name        String
  steps       Json     @default("[]")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  enrollments LeadSequenceEnrollment[]

  @@map("lead_sequences")
}

model LeadSequenceEnrollment {
  id           String    @id @default(cuid())
  leadId       String    @map("lead_id")
  sequenceId   String    @map("sequence_id")
  status       String    @default("active")
  currentStep  Int       @default(0) @map("current_step")
  nextActionAt DateTime? @map("next_action_at")
  completedAt  DateTime? @map("completed_at")
  createdAt    DateTime  @default(now()) @map("created_at")
  updatedAt    DateTime  @updatedAt @map("updated_at")

  lead     Lead         @relation(fields: [leadId], references: [id], onDelete: Cascade)
  sequence LeadSequence @relation(fields: [sequenceId], references: [id], onDelete: Cascade)

  @@unique([leadId, sequenceId])
  @@index([status, nextActionAt])
  @@index([leadId])
  @@index([sequenceId])
  @@map("lead_sequence_enrollments")
}

model LeadInteraction {
  id          String    @id @default(cuid())
  leadId      String    @map("lead_id")
  direction   String
  channel     String
  content     String
  aiSentiment String?   @map("ai_sentiment")
  aiIntent    String?   @map("ai_intent")
  createdAt   DateTime  @default(now()) @map("created_at")

  lead Lead @relation(fields: [leadId], references: [id], onDelete: Cascade)

  @@index([leadId])
  @@index([direction])
  @@map("lead_interactions")
}

// ─── Advertising Campaign Management (Agent 2 — Amplification Engine) ─

model CompetitorAd {
  id              String   @id @default(cuid())
  brandId         String   @map("brand_id")
  platform        String
  competitorName  String   @map("competitor_name")
  adContent       String   @map("ad_content")
  imageUrl        String?  @map("image_url")
  aiAnalysis      String?  @map("ai_analysis")
  collectedAt     DateTime @default(now()) @map("collected_at")

  @@index([brandId])
  @@index([collectedAt])
  @@map("competitor_ads")
}

model AdCampaign {
  id                  String    @id @default(cuid())
  brandId             String    @map("brand_id")
  adAccountId         String    @map("ad_account_id")
  contentSignalId     String?   @map("content_signal_id")
  name                String
  platform            String
  objective           String    @default("traffic")
  dailyBudget         Float     @map("daily_budget")
  totalBudget         Float     @map("total_budget")
  status              String    @default("draft")
  platformCampaignId  String?   @map("platform_campaign_id")
  targeting           Json      @default("{}")
  kpiTargets          Json      @default("{}") @map("kpi_targets")
  aiProposal          Json?     @map("ai_proposal")
  startDate           DateTime? @map("start_date")
  endDate             DateTime? @map("end_date")
  createdAt           DateTime  @default(now()) @map("created_at")
  updatedAt           DateTime  @updatedAt @map("updated_at")

  contentSignal ContentSignal? @relation(fields: [contentSignalId], references: [id])
  adSets        AdSet[]
  creatives     AdCreative[]
  metrics       AdMetrics[]

  @@index([brandId])
  @@index([status])
  @@index([contentSignalId])
  @@map("ad_campaigns")
}

model AdSet {
  id               String  @id @default(cuid())
  campaignId       String  @map("campaign_id")
  name             String
  dailyBudget      Float   @map("daily_budget")
  targeting        Json    @default("{}")
  platformAdsetId  String? @map("platform_adset_id")
  status           String  @default("active")

  campaign  AdCampaign   @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  creatives AdCreative[]
  metrics   AdMetrics[]

  @@index([campaignId])
  @@map("ad_sets")
}

model AdCreative {
  id                  String  @id @default(cuid())
  campaignId          String  @map("campaign_id")
  adSetId             String? @map("ad_set_id")
  title               String
  body                String
  imageUrl            String  @map("image_url")
  callToActionType    String  @default("LEARN_MORE") @map("call_to_action_type")
  platformCreativeId  String? @map("platform_creative_id")

  campaign AdCampaign @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  adSet    AdSet?     @relation(fields: [adSetId], references: [id], onDelete: SetNull)

  @@index([campaignId])
  @@index([adSetId])
  @@map("ad_creatives")
}

model AdMetrics {
  id          String   @id @default(cuid())
  campaignId  String   @map("campaign_id")
  adSetId     String?  @map("ad_set_id")
  impressions Int      @default(0)
  clicks      Int      @default(0)
  spend       Float    @default(0)
  conversions Int      @default(0)
  cpc         Float    @default(0)
  cpm         Float    @default(0)
  ctr         Float    @default(0)
  roas        Float    @default(0)
  collectedAt DateTime @default(now()) @map("collected_at")

  campaign AdCampaign @relation(fields: [campaignId], references: [id], onDelete: Cascade)
  adSet    AdSet?     @relation(fields: [adSetId], references: [id], onDelete: SetNull)

  @@index([campaignId])
  @@index([adSetId])
  @@index([collectedAt])
  @@map("ad_metrics")
}

// ─── A/B Testing (Phase 4.4) ──────────────────────────────────

model ABTest {
  id              String    @id @default(cuid())
  name            String
  entityType      String    @map("entity_type")
  controlId       String    @map("control_id")
  variantId       String    @map("variant_id")
  metric          String    @default("engagement_score")
  status          String    @default("running")
  controlViews    Int       @default(0) @map("control_views")
  controlSuccess  Int       @default(0) @map("control_success")
  variantViews    Int       @default(0) @map("variant_views")
  variantSuccess  Int       @default(0) @map("variant_success")
  confidenceLevel Float?    @map("confidence_level")
  winner          String?
  conclusion      String?
  startedAt       DateTime  @default(now()) @map("started_at")
  endedAt         DateTime? @map("ended_at")
  createdAt       DateTime  @default(now()) @map("created_at")
  updatedAt       DateTime  @updatedAt @map("updated_at")

  @@index([status])
  @@index([entityType])
  @@map("ab_tests")
}

model AiLearningLog {
  id          String   @id @default(cuid())
  agentType   String   @map("agent_type")
  actionType  String   @map("action_type")
  entityType  String   @map("entity_type")
  entityId    String   @map("entity_id")
  input       Json
  output      Json
  outcome     String?
  embedding   Json?
  createdAt   DateTime @default(now()) @map("created_at")

  @@index([agentType])
  @@index([entityType, entityId])
  @@map("ai_learning_logs")
}

// ─── Agent Messages Bus & Dead Letter Queue ────────────────────

model AgentMessage {
  id            String    @id @default(cuid())
  channel       String
  payload       Json
  correlationId String?   @map("correlation_id")
  consumed      Boolean   @default(false)
  consumedAt    DateTime? @map("consumed_at")
  consumedBy    String?   @map("consumed_by")
  retryCount    Int       @default(0) @map("retry_count")
  error         String?
  createdAt     DateTime  @default(now()) @map("created_at")

  @@index([channel])
  @@index([consumed, createdAt])
  @@index([correlationId])
  @@map("agent_messages")
}

// ─── Workflow Error Logs ────────────────────────────────────────

model WorkflowError {
  id          String   @id @default(cuid())
  workflowId  String   @map("workflow_id")
  workflowName String? @map("workflow_name")
  nodeName    String?  @map("node_name")
  errorMessage String  @map("error_message")
  errorStack  String?  @map("error_stack")
  payload     Json?
  createdAt   DateTime @default(now()) @map("created_at")

  @@index([workflowId])
  @@index([createdAt])
  @@map("workflow_errors")
}
