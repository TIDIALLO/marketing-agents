# --- Email (resend.com) ---
RESEND_API_KEY=
EMAIL_FROM=noreply@mktengine.dev

# --- n8n ---
N8N_ENCRYPTION_KEY=CHANGE_ME_32_random_chars
N8N_HOST=localhost
WEBHOOK_URL=http://localhost/webhook/
N8N_API_KEY=

# --- OAuth (optional) ---
