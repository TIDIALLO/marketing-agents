# --- PostgreSQL ---
POSTGRES_DB=marketing_engine
POSTGRES_USER=mkt_user
POSTGRES_PASSWORD=CHANGE_ME_strong_password_here

# --- Redis ---
REDIS_PASSWORD=CHANGE_ME_strong_redis_password

# --- Auth (generate with: openssl rand -base64 48) ---
JWT_SECRET=CHANGE_ME_64_chars_minimum
JWT_REFRESH_SECRET=CHANGE_ME_64_chars_minimum

# --- Encryption (generate with: openssl rand -hex 32) ---
ENCRYPTION_KEY=CHANGE_ME_64_hex_chars

# --- App URLs ---
APP_URL=http://localhost
CORS_ORIGINS=http://localhost

# --- AI Keys ---
CLAUDE_API_KEY=
CLAUDE_MODEL=claude-sonnet-4-5-20250929
